@using FribergCarRentalsBravo.Models.Admin
@model LoginAdminViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex flex-column gap-2 align-items-center">
    <div class="text-center">
        <h1>Login</h1>
        <p class="text-align-center">You must login to continue.</p>
    </div>
    <div class="d-flex flex-column">
        <form asp-action="Login" class="vertical-form">
            <div class="d-flex flex-column gap-1">
                <div class="d-flex flex-column gap-1">
                    <div asp-validation-summary="ModelOnly" class="error-text"></div>
                </div>
                <div class="d-flex flex-column gap-1">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="error-text"></span>
                </div>
                <div class="d-flex flex-column gap-1">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" />
                    <span asp-validation-for="Password" class="error-text"></span>
                </div>
                <div class="d-flex flex-row justify-content-center">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
