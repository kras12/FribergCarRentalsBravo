@using FribergCarRentalsBravo.Models.Admin
@model AdminViewModel

@{
    ViewData["Title"] = "Admin";
}

<div class="d-flex flex-column gap-4 align-items-center">
    <h1>Admin Panel</h1>
    <h2>Welcome to the admin panel '@(Model.Email)'!</h2>
    <p class="text-align-center">You can use the navigation at the top of the page to browse your cars, customers and orders. More actions can be found in respective section.</p>
</div>

<div class="d-flex flex-column gap-2 align-items-center">
    <h2 style="border-bottom: 0.2em solid; border-bottom-color: #fdc53e; margin-bottom: 0">Statistics</h2>
    <h3 style="border-top: 0.2em solid; border-top-color: #df540f">Total amount of:</h3>

    <div style="margin-bottom: 1em" class="d-flex flex-row gap-5">
        <div style="text-align:center">
            <div class="div-statistics-left">
                <h5 style="text-align:center">Registered customers</h5>
                <p style="text-align:center; font-size:x-large">@ViewBag.CustomerAmount</p>
            </div>
            <a class="route-links-table" asp-controller="AdminCustomer" asp-action="Index">-List of all customers-</a>
        </div>
        <div style="text-align:center">
            <div class="div-statistics-right">
                <h5 style="text-align:center">Cars in the fleet</h5>
                <p style="text-align:center; font-size:x-large">@ViewBag.CarAmount</p>
            </div>
            <a class="route-links-table" asp-controller="AdminCar" asp-action="Index">-List of all cars-</a>
        </div>
    </div>
    <div class="d-flex flex-row gap-5">
        <div style="text-align:center">
            <div class="div-statistics-left">
                <h5 style="text-align:center">Car categories</h5>
                <p style="text-align:center; font-size:x-large">@ViewBag.CarCategoryAmount</p>
            </div>
            <a class="route-links-table" asp-controller="AdminCarCategory" asp-action="Index">-List of all car categories-</a>
        </div>
        <div style="text-align:center">
            <div class="div-statistics-right">
                <h5 style="text-align:center">Orders in the system</h5>
                <p style="text-align:center; font-size:x-large">@ViewBag.OrderAmount</p>
            </div>
            <a class="route-links-table" asp-controller="AdminOrder" asp-action="Index">-List of all orders-</a>
        </div>
    </div>
</div>

<div class="d-flex flex-column gap-2 align-items-center">
<h2 style="margin-top: 1em">Todays Pickups</h2>
</div>
@await Component.InvokeAsync("TodaysPickupsList")
