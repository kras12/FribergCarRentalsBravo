@using FribergCarRentalsBravo.Models.Customers
@model RegisterCustomerViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="vertical-flex-container flex-container__align-items-center filled-container flex-container__padding__1-rem filled-box">
    <h2>Register</h2>
    <form asp-action="Create" class="vertical-form">
        <div class="vertical-form-field">
            <div asp-validation-summary="ModelOnly" class="error-text"></div>
        </div>
        <div class="vertical-form-field">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="error-text"></span>
        </div>
        <div class="vertical-form-field">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" class="error-text"></span>
        </div>
        <div class="vertical-form-field">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="error-text"></span>
        </div>
        <div class="vertical-form-field">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="error-text"></span>
        </div>
        <div class="vertical-form-field">
            <button type="submit">Register</button>
        </div>
    </form>
</div>