@using FribergCarRentalsBravo.Models.Customers
@model RegisterCustomerViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Register</h2>
<form class="vertical-form" asp-action="Create" class="vertical-form">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="error-text"></div>
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-input-box" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="error-text"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-input-box" asp-for="LastName" />
        <span asp-validation-for="LastName" class="error-text"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-input-box" asp-for="Email" />
        <span asp-validation-for="Email" class="error-text"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-input-box" asp-for="Password" />
        <span asp-validation-for="Password" class="error-text"></span>
    </div>
    <div class="form-buttons-container">
        <button class="btn btn-primary" type="submit">Register</button>
    </div>
</form>