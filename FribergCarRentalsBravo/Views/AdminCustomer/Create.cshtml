@using FribergCarRentalsBravo.Models.Customers
@model RegisterCustomerViewModel

@{
    ViewData["Title"] = "Create Customer";
}

<div class="vertical-page-container">
    <h1>Create Customer</h1>
    <div class="col-md-4">
        <form class="vertical-form" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control form-input-box" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control form-input-box" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control form-input-box" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control form-input-box" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-buttons-container">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Index" asp-controller="AdminCustomer">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
